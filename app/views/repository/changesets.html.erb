<% @page_title = 'Showing changesets' %>

<div id="content">
<%= render :partial => 'breadcrumbs', :locals => { :trail => false } %>

  <div class="breadcrumbs"></div>
  <% @changesets.each do |changeset| %>
  <h2><%= link_to 'Changeset ' + changeset.revision.to_s, :action => 'show_changeset', :revision => changeset.revision %>:</h2>
  <ul class="changes">
    <li><strong>Author:</strong> <%= changeset.author -%></li>
    <li><strong>Date:</strong> <%= changeset.revised_at.strftime('%a %b %d %H:%M %Y') -%></li>
  </ul>
  <div class="log-small"><%= format_and_make_links(h(changeset.log)) -%></div>
  <% end -%>

  <div class="pagination">
    <p>Page: <%= pagination_links(@changeset_pages)  -%></p>
  </div>
</div>