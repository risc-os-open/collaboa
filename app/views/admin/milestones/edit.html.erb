<% @page_title = 'Edit Milestone' %>

<div id="content">
  <div class="breadcrumbs">
    <ul>
      <li><%= link_to 'Administration', :controller => 'dashboard' -%></li>
      <li>&#187; <%= link_to 'Milestones', :action => 'index' -%></li>
      <li>&#187; Editing Milestone</li>
    </ul>
  </div>


  <%= error_messages_for @milestone %>

  <%= form_tag :action => 'edit', :id => @milestone.id do %>
  <fieldset>
    <legend>Edit milestone</legend>

    <label class="first">Name of this milestone (eg 0.7.5):
    <%= text_field 'milestone', 'name' -%></label>

    <label class="first">A short description or other info you want displayed (optional):
    <%= text_area 'milestone', 'info' -%></label>

    <label class="first">Completed?:
    <%= check_box 'milestone', 'completed' -%></label>

    <input type="submit" value="Edit milestone" class="submit">
  <% end %>
</div>
