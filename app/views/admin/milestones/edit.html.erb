<% @page_title = 'Edit milestone' %>

<div id="content">
  <div class="breadcrumbs">
    <ul>
      <li><%= link_to 'Administration', :controller => 'dashboard' -%></li>
      <li>&#187; <%= link_to 'Milestones', :action => 'index' -%></li>
      <li>&#187; Editing milestone</li>
    </ul>
  </div>

  <%= error_messages_for @milestone %>

  <%= form_for @milestone, url: admin_milestone_path(@milestone) do |f| %>
    <fieldset>
      <legend>Edit milestone</legend>

      <%= f.label :name, 'Name of this milestone (eg 0.7.5):', class: 'first' %>
      <%= f.text_field :name %></label>

      <%= f.label :info, 'A short description or other info you want displayed (optional):' %>
      <%= f.text_area :info, rows: 3 %>

      <%= f.label :completed do %>
        <%= f.check_box :completed %> Completed?
      <% end %>

      <%= f.submit 'Update milestone' %>
    </fieldset>
  <% end %>
</div>
