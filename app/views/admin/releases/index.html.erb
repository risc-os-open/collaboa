<% @page_title = 'Create new release' %>

<div id="content">
  <div class="breadcrumbs">
    <ul>
      <li><%= link_to 'Administration', :controller => 'dashboard' -%></li>
      <li>&#187; Releases</li>
    </ul>
  </div>

  <h2>Current releases:</h2>

  <ul>
    <% @releases.each do |release| %>
      <li>
        <%= link_to release.name, :action => 'edit', :id => release.id %>
        <%= apphelp_inline_delete(release, 'release') %>
      </li>
    <% end %>
  </ul>

  <%= error_messages_for @release %>

  <%= form_for :release, url: admin_releases_path() do |f| %>
    <fieldset>
      <legend>Create new release</legend>

      <label class="first">Name of this release (eg 0.7.5):</label>
      <%= f.text_field :name %>

      <%= f.submit 'Create release' %>
    </fieldset>
  <% end %>
</div>
